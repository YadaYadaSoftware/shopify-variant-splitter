<Window x:Class="ShopifyVariantSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopify Variant Splitter" Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Shopify Variant Splitter"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Import Shopify CSV file with variants and export as individual products"
                   TextWrapping="Wrap" HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ImportButton" Content="Import CSV"
                    Width="100" Height="30" Margin="0,0,10,0"
                    Click="ImportButton_Click"/>
            <Button x:Name="ExportButton" Content="Export CSV"
                    Width="100" Height="30" Margin="10,0,0,0"
                    Click="ExportButton_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Grid.Row="3"
                   Margin="0,20,0,0" HorizontalAlignment="Center"
                   Foreground="Gray"/>

        <TextBox x:Name="LogTextBox" Grid.Row="4"
                 Margin="0,20,0,0" IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="10"/>
    </Grid>
</Window>